{
	"compilerOptions": {
		"noEmit": false,
		"outDir": "dist",
		"rootDir": "src",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"types": ["node"],
		"lib": ["ES2022"],
		"sourceMap": true,
		"target": "ES2022",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["tests", "drizzle.config.ts", "drizzle", "node_modules"]
}
